<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/view"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:text="@string/contributors"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/piyush"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/profile"
            android:scaleType="fitXY"
            android:layout_alignParentStart="true"
            android:src="@color/colorPrimary"
            android:layout_width="80dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_height="80dp"
            android:contentDescription="Image" />

        <ImageView
            android:src="@drawable/xx"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/profile"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Piyush Maheswari"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:text="Android | Kotlin | Flutter"
                android:textStyle="italic"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ashish"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/profilea"
            android:scaleType="fitXY"
            android:layout_alignParentStart="true"
            android:src="@color/colorPrimary"
            android:layout_width="80dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_height="80dp"
            android:contentDescription="Image" />

        <ImageView
            android:src="@drawable/xx"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/profilea"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Ashish Awasthi"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:text="Android | Hacking | Web"
                android:textStyle="italic"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/manna"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/profilem"
            android:scaleType="fitXY"
            android:layout_alignParentStart="true"
            android:src="@color/colorPrimary"
            android:layout_width="80dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_height="80dp"
            android:contentDescription="Image" />

        <ImageView
            android:src="@drawable/xx"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/profilem"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Shuvam Manna"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:text="Android | Hacking | Web"
                android:textStyle="italic"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>